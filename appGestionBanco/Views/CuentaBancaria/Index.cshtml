@model IEnumerable<appGestionBanco.Models.CuentaBanco>

<h2>Lista de Cuentas Bancarias</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre del Titular</th>
            <th>Tipo de Cuenta</th>
            <th>Saldo Inicial</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.NombreTitular</td>
                <td>@account.TipoCuenta</td>
                <td>@account.SaldoInicial</td>
                <td>@account.Email</td>
            </tr>
        }
    </tbody>
</table>